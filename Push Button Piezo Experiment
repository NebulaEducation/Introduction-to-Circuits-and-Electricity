//Each array includes note 0 to 8, and can be accessed by using note[#]
int C[9] = {16.35, 32.7, 65.41, 130.81, 261.63, 523.25, 1046.5, 2093, 4186.01}; //Array that includes frequency for each note, in hertz
int Csharp[9] = {17.32, 34.65, 69.3, 138.59, 277.18, 554.37, 1108.73, 2217.46, 4434.92};
int Dflat[9] = {17.32, 34.65, 69.3, 138.59, 277.18, 554.37, 1108.73, 2217.46, 4434.92};
int D[9] = {18.35, 36.71, 73.42, 146.83, 293.66, 587.33, 1174.66, 2349.32, 4698.63};
int Dsharp[9] = {19.45, 38.89, 77.78, 155.56, 311.13, 622.25, 1244.51, 2489.02, 4978.03};
int Eflat[9] = {19.45, 38.89, 77.78, 155.56, 311.13, 622.25, 1244.51, 2489.02, 4978.03};
int E[9] = {20.6, 41.2, 82.41, 164.81, 329.63, 659.25, 1318.51, 2637.02, 5274.04};
int F[9] = {21.83, 43.65, 87.31, 174.61, 349.23, 698.46, 1396.91, 2793.83, 5587.65};
int Fsharp[9] = {23.12, 46.25, 92.5, 185, 369.99, 739.99, 1479.98, 2959.96, 5919.91};
int Gflat[9] = {23.12, 46.25, 92.5, 185, 369.99, 739.99, 1479.98, 2959.96, 5919.91};
int G[9] = {24.5, 49, 98, 196, 392, 783.99, 1567.98, 3135.96, 6271.93};
int Gsharp[9] = {25.96, 51.91, 103.83, 207.65, 415.3, 830.61, 1661.22, 3322.44, 6644.88};
int Aflat[9] = {25.96, 51.91, 103.83, 207.65, 415.3, 830.61, 1661.22, 3322.44, 6644.88};
int A[9] = {27.5, 55, 110, 220, 440, 880, 1760, 3520, 7040};
int Asharp[9] = {29.14, 58.27, 116.54, 233.08, 466.16, 932.33, 1864.66, 3729.31, 7458.62};
int Bflat[9] = {29.14, 58.27, 116.54, 233.08, 466.16, 932.33, 1864.66, 3729.31, 7458.62};
int B[9] = {30.87, 61.74, 123.47, 246.94, 493.88, 987.77, 1975.53, 3951.07, 7902.13};
int scale[14] = {C[4], D[4], E[4], F[4], G[4], A[4], B[4], C[5], B[4], A[4], G[4], F[4], E[4], D[4]};

const int piezo = 8; //Declares digital pin 8 as the piezo pin

void setup() {
  pinMode(piezo, OUTPUT); //Declares piezo pin as an output pin
}

void loop() {
  for(int i = 0; i < 14; i++){ //For loop that allows each of the tones to be played
    tone(piezo, scale[i]); //Plays the tone
    delay(1000); //Waits 1 second
    }
}
